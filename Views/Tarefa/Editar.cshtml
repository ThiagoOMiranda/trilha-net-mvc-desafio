@model trilha_net_mvc_desafio.Models.Tarefa;

@{
    ViewData["Title"] = "Editar farefa";
}

<div class="d-flex align-items-center justify-content-center shadow-sm text-white bg-info m-auto mb-2 rounded rounded-4 p-1 w-50 border-bottom border-3">
    <i class="icon-title fa-solid fa-file-pen fa-lg rounded-circle shadow-sm d-flex align-items-center justify-content-center me-3"></i>
    <h4 class="fw-bold text-shadow">Editar Tarefa:</h4>
</div>

<div class="row m-auto bg-light p-3 rounded-3 w-50 shadow">
    <div class="col-md">
        <form asp-action="Editar">
            <div class="form-group mb-2">
                <label class="control-label fw-bold mb-1">@Html.DisplayNameFor(x => x.Titulo) :</label>
                <input asp-for="Titulo" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label class="control-label fw-bold mb-1">@Html.DisplayNameFor(x => x.Descricao) :</label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group mb-4">
                <label class="control-label fw-bold mb-1">@Html.DisplayNameFor(x => x.Data) :</label>
                <input type="datetime-local" asp-for="Data" class="form-control" />
            </div>
            <div class="input-group mb-4">
                <label class="input-group-text fw-bold">@Html.DisplayNameFor(x => x.Prioridade) da Tarefa :</label>
                <select asp-for="Prioridade" asp-items="Html.GetEnumSelectList<EnumPrioridadeTarefa>()" class="form-select">
                    <option value="">Escolha</option>
                </select>
            </div>
            <div class="input-group mb-4">
                <label class="input-group-text fw-bold">@Html.DisplayNameFor(x => x.Status) da Tarefa :</label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<EnumStatusTarefa>()" class="form-select">
                    <option value="">Escolha</option>
                </select>
            </div>
            <div class="form-group mb-2 d-flex align-items-center justify-content-between">
                <a asp-action="Index" class="btn btn-outline-dark fw-bold shadow-sm"><i class="fa-solid fa-left-long fa-lg me-2"></i>Voltar</a>
                <button type="submit" class="btn btn-success fw-bold"><i class="fa-solid fa-check me-2"></i> Aplicar</button>
            </div>
        </form>
    </div>
</div>