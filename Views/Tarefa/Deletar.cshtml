@model trilha_net_mvc_desafio.Models.Tarefa;

@{
    ViewData["Title"] = "Deletar tarefa";
}

<div class="d-flex align-items-center justify-content-center shadow-sm text-white bg-danger m-auto mb-2 rounded rounded-4 p-1 w-50 border-bottom border-3">
    <i class="icon-title fa-solid fa-trash fa-lg rounded-circle shadow-sm d-flex align-items-center justify-content-center me-3"></i>
    <h4 class="fw-bold mb-1 text-shadow">Deseja deletar a Tarefa?</h4>
</div>

<div class="w-50 m-auto d-flex flex-column bg-light p-4 rounded-3 shadow">
    <h5 class="text-center py-3 border border-2 rounded rounded-4 text-secondary mb-4 fw-bold">Atenção! Essa operação não pode ser desfeita.</h5>
    
    <dl class="row">
        <dt class="col-sm-3 text-nowrap">
            @Html.DisplayNameFor(x => x.Titulo) :
        </dt>
        <dt class="col-sm-9 mb-3">
            <label class="bg-white text-secondary p-2 fw-normal border rounded-3 border-1 w-100">@Html.DisplayFor(x => x.Titulo)</label>
        </dt>
        <dt class="col-sm-3 text-nowrap">
            @Html.DisplayNameFor(x => x.Descricao) :
        </dt>
        <dt class="col-sm-9 mb-3">
            <label class="bg-white text-secondary p-2 fw-normal border rounded-3 border-1 w-100">@Html.DisplayFor(x => x.Descricao)</label>
        </dt>
        <dt class="col-sm-3 text-nowrap">
            @Html.DisplayNameFor(x => x.Data) :
        </dt>
        <dt class="col-sm-9 mb-3">
            <label class="bg-white text-secondary p-2 fw-normal border rounded-3 border-1 w-100">@Html.DisplayFor(x => x.Data)</label>
        </dt>
        <dt class="col-sm-3 text-nowrap">
            @Html.DisplayNameFor(x => x.Prioridade) :
        </dt>
        <dt class="col-sm-9 mb-3">
            <label class="bg-white text-secondary p-2 fw-normal border rounded-3 border-1 w-100">@Html.DisplayFor(x => x.Prioridade)</label>
        </dt>
        <dt class="col-sm-3 text-nowrap">
            @Html.DisplayNameFor(x => x.Status) :
        </dt>
        <dt class="col-sm-9 mb-1">
            <label class="bg-white text-secondary p-2 fw-normal border rounded-3 border-1 w-100">@Html.DisplayFor(x => x.Status)</label>
        </dt>
    </dl>
    <div class="w-100 mb-1 d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-dark fw-bold shadow-sm"><i class="fa-solid fa-left-long fa-lg me-2"></i>Voltar</a>
        
        <form asp-action="Deletar">
            <button type="submit" class="btn btn-danger shadow-sm"><i class="fa-solid fa-trash fa-lg me-2"></i> Deletar</button>
        </form>
    </div>
</div>